<html lang="pt">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">    
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Aruan2D :: Gerenciar</title>

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="icon" sizes="192x192" href="/images/dashbrd/android-desktop.png">

    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="Material Design Lite">
    <link rel="apple-touch-icon-precomposed" href="/images/dashbrd/ios-desktop.png">

    <!-- Tile icon for Win8 (144x144 + tile color) -->
    <meta name="msapplication-TileImage" content="/images/touch/ms-touch-icon-144x144-precomposed.png">
    <meta name="msapplication-TileColor" content="#3372DF">

    <link rel="shortcut icon" href="/images/dashbrd/favicon.png">


    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/stylesheets/material.min.css">
    <link rel="stylesheet" href="/stylesheets/dash.css">
    <link rel="stylesheet" href="/stylesheets/default.css">
  </head>
  <body>
    <div class="dash-layout mdl-layout mdl-js-layout mdl-layout--fixed-header">
      <header class="dash-header mdl-layout__header">
        <div class="mdl-layout__header-row">
          <span class="mdl-layout__title"><img src="/images/letter2.png" class="logo">Aruan2D Dashboard : : <%= title %></span>
        </div>
      </header>
      <main class="dash-login mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid dash-content">

          <div class="dash-login-box mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
            <h3>Login</h3>
            <form method="post">
              <div class="mdl-textfield mdl-js-textfield">
                <input type="email" name="email" id="email" class="mdl-textfield__input" value="<%= body.email %>">
                <label class="mdl-textfield__label" for="email">E-mail</label>
                <span class="mdl-textfield__error">
                  Digite um e-mail v√°lido (ex.: nome@email.com)
                </span>
              </div>             
              <br>
              <div class="mdl-textfield mdl-js-textfield">
                <input type="password" name="password" id="password" class="mdl-textfield__input">
                <label class="mdl-textfield__label" for="password">Senha</label>
              </div>
              <br>
              <span class="dash-login-error"><%= msg %></span>
              
              <br><br>
              <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">Entrar</button>
              <br><br>
            </form>
          </div>


        </div>
      </main>
    </div>    
    <script defer src="/mdl/material.min.js"></script>
  </body>
</html>